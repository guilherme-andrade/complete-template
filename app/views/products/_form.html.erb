<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :index %>
    <%= f.input :show %>
    <%= f.input :new %>
    <%= f.input :create %>
    <%= f.input :destroy %>
    <%= f.input :update %>
    <%= f.input :edit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
