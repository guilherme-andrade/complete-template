<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Show</th>
      <th>New</th>
      <th>Create</th>
      <th>Destroy</th>
      <th>Update</th>
      <th>Edit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.index %></td>
        <td><%= product.show %></td>
        <td><%= product.new %></td>
        <td><%= product.create %></td>
        <td><%= product.destroy %></td>
        <td><%= product.update %></td>
        <td><%= product.edit %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

